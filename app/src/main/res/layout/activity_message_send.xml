<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message_send"
    android:id="@+id/custom_toast"
    android:padding="20dp"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/towhom"
        android:hint="To"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="number"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtmessage"
        android:layout_below="@+id/towhom"
        android:hint="Message"
        android:textSize="20dp"
        android:gravity="top"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendmessage"
        android:text="Send"
        android:layout_below="@+id/txtmessage"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_picker"
        android:layout_below="@+id/sendmessage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_time"
            android:layout_below="@+id/time_picker"
            android:hint="Current Time"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_time"
        android:layout_centerInParent="true"
        android:text="Change Time"
        android:id="@+id/change_time"/>

</RelativeLayout>